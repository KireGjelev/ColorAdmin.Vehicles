@model ColorAdmin.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>

<h3>Are you sure you want to delete this vehicle?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePlate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LicensePlate)
        </dd>
        <!-- Add other fields as necessary -->
    </dl>

    <form asp-action="Delete" method="post" id="deleteForm">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            if (confirm('Are you sure you want to delete this vehicle?')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}